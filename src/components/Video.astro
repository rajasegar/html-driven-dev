---
export interface Props {
	id: string;
	duration: number;
	year: number;
  description: string;
}

const { id, duration, year, description } = Astro.props;

---
<div class="flex flex-col">
		<iframe src="https://www.youtube.com/embed/{id}" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen" width="100%" height="225" frameborder="0"></iframe>
		<div class="dark:text-white mt-4"><p class="card-text">{description}</p>
		</div>
		<div class="flex flex-row justify-between items-center mt-4"><small>{year}</small><small class="text-muted">{duration} mins</small></div>
</div>
